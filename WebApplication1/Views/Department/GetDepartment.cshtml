<form action="/Department/UpdateDepartment?id=@Model.Id" method="post">
	<div class="form-group">
		<label for="Name">Update The Name</label>
		<input class="form-control" type="text" name="Name" id="Name" value="@Model.Name" />
	</div>
	<div class="form-group">
		<label for="Manager">Update The Department Manager</label>
		<input class="form-control" type="text" name="Manager" id="Manager" value="@Model.ManagerName" />
	</div>

	<input type="submit" class="btn btn-primary" value="Update" />
</form>
